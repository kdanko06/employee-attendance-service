{
  "info": {
    "name": "Employee Attendance Service API",
    "description": "API for Employee Registration and Time Logging System with JWT Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "employeeId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"name\": \"John Admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new admin user. Returns JWT token."
          },
          "response": []
        },
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login as admin. Returns JWT token."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "Sign-In Employee",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('employeeId', response.employee.id);",
                  "    console.log('Employee ID saved:', response.employee.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"employee@example.com\",\n  \"name\": \"Jane Employee\",\n  \"department\": \"Engineering\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/attendance/sign-in",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", "sign-in"]
            },
            "description": "Register and sign-in a new employee. Requires admin JWT token."
          },
          "response": []
        },
        {
          "name": "Sign-Off Employee",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"{{employeeId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/attendance/sign-off",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", "sign-off"]
            },
            "description": "Sign-off an employee. Requires admin JWT token and employee ID."
          },
          "response": []
        },
        {
          "name": "Get Shift Reports - All",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/attendance/report?page=1&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", "report"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Get all shift reports with pagination. Requires admin JWT token."
          },
          "response": []
        },
        {
          "name": "Get Shift Reports - By Employee",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/attendance/report?employeeId={{employeeId}}&page=1&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", "report"],
              "query": [
                {
                  "key": "employeeId",
                  "value": "{{employeeId}}"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Get shift reports filtered by employee. Requires admin JWT token."
          },
          "response": []
        },
        {
          "name": "Get Shift Reports - Date Range",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/attendance/report?startDate=2024-01-01&endDate=2024-12-31&page=1&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", "report"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Get shift reports filtered by date range. Requires admin JWT token."
          },
          "response": []
        }
      ]
    }
  ]
}
